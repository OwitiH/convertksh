---
import BlogLayout from '../../layouts/BlogLayout.astro';

const title = 'Best Ways to Send Money to Kenya in 2025';
const description = 'Compare the cheapest and fastest ways to send money to Kenya from abroad, including fees, exchange rates, and transfer times.';
const publishDate = new Date('2025-06-10');
const tags = ['money transfer', 'comparison', 'fees', 'guide'];
---

<BlogLayout {title} {description} {publishDate} {tags}>
  <p class="lead">Sending money to Kenya? Compare the top money transfer services to find the best rates, lowest fees, and fastest transfer times in 2025.</p>
  
  <h2>Best Money Transfer Services to Kenya</h2>
  
  <div class="bg-gray-700 bg-opacity-50 p-6 rounded-lg my-8">
    <h3 class="text-xl font-bold text-emerald-300 mb-4">Quick Comparison (June 2025)</h3>
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-600">
        <thead>
          <tr>
            <th class="px-4 py-3 text-left text-sm font-medium text-gray-300">Service</th>
            <th class="px-4 py-3 text-left text-sm font-medium text-gray-300">Exchange Rate</th>
            <th class="px-4 py-3 text-left text-sm font-medium text-gray-300">Fees (KES 10,000)</th>
            <th class="px-4 py-3 text-left text-sm font-medium text-gray-300">Transfer Time</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-700">
          <tr>
            <td class="px-4 py-3">Wise</td>
            <td class="px-4 py-3">Market rate - 0.5%</td>
            <td class="px-4 py-3">KES 350</td>
            <td class="px-4 py-3">1-2 days</td>
          </tr>
          <tr>
            <td class="px-4 py-3">WorldRemit</td>
            <td class="px-4 py-3">Market rate - 1%</td>
            <td class="px-4 py-3">KES 400</td>
            <td class="px-4 py-3">Instant to M-PESA</td>
          </tr>
          <tr>
            <td class="px-4 py-3">Remitly</td>
            <td class="px-4 py-3">Market rate - 0.8%</td>
            <td class="px-4 py-3">KES 380</td>
